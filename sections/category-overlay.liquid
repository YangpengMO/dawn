{% stylesheet %}
.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 1fr);
  gap: 16px;
  padding: 0 1rem;
}

.category-grid__item {
  position: relative;
  overflow: hidden;
  border-radius: 12px;
  cursor: pointer;
  transition: transform 0.3s ease;
  background-color: #f7f7f7;
}

.category-grid__item:hover {
  transform: scale(1.03);
  z-index: 1;
}

.category-grid__image {
  width: 100%;
  height: auto;
  display: block;
  object-fit: cover;
}

.category-grid__link {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 1rem;
  text-decoration: none;
  font-size: 1.25rem;
  font-weight: 600;
  color: #333;
  background: rgba(255,255,255,0.6);
  text-shadow: none;
  transition: background 0.3s ease;
}

.category-grid__link:hover {
  background: rgba(255,255,255,0.85);
}

.category-grid__item--large {
  grid-row: span 2;
  grid-column: span 1;
}

@media screen and (max-width: 900px) {
  .category-grid {
    grid-template-columns: 1fr;
    grid-template-rows: auto;
  }
  .category-grid__item,
  .category-grid__item--large {
    grid-column: span 1;
    grid-row: span 1;
  }
}
{% endstylesheet %}

{% if section.settings.title != blank %}
  <h2 class="category-overlay__title">{{ section.settings.title }}</h2>
{% endif %}

<div class="category-grid">
  {% assign blocks = section.blocks | slice: 0,5 %}
  {% for block in blocks %}
    <div class="category-grid__item {% if forloop.first %}category-grid__item--large{% endif %}">
      {% if block.settings.image %}
        <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.title }}" class="category-grid__image" loading="lazy">
      {% endif %}
      {% if block.settings.link %}
        <a href="{{ block.settings.link }}" class="category-grid__link">
          {{ block.settings.title }}
          <span>&rarr;</span>
        </a>
      {% endif %}
    </div>
  {% endfor %}
</div>

