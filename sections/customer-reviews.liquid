{% stylesheet %}
.customer-reviews-carousel {
  padding: 64px 20px;
  background-color: #fefefe;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
}

.review-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 32px;
  justify-content: center;
  align-items: stretch;
}

.review-card {
  background: #ffffff;
  border-radius: 16px;
  border: 1px solid #e0e0e0;
  padding: 28px;
  box-shadow: 0 6px 16px rgba(0, 0, 0, 0.05);
  position: relative;
  text-align: left;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.review-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
}

.review-avatar {
  width: 52px;
  height: 52px;
  border-radius: 50%;
  object-fit: cover;
  margin-bottom: 12px;
  box-shadow: 0 0 0 2px #ddd;
}

.review-stars {
  color: #fbbc04;
  font-size: 18px;
  margin: 8px 0;
}

.review-text {
  font-size: 16px;
  color: #333;
  margin-bottom: 14px;
  line-height: 1.6;
}

.review-author {
  font-size: 14px;
  font-weight: 500;
  color: #666;
}

.review-carousel-container {
  position: relative;
  overflow: hidden;
}

.more-reviews-btn {
  margin-top: 40px;
  display: inline-block;
  background: #222;
  color: #fff;
  padding: 12px 28px;
  border-radius: 8px;
  font-size: 15px;
  text-decoration: none;
  transition: background 0.3s;
}
.more-reviews-btn:hover {
  background: #000;
}
{% endstylesheet %}

<div class="customer-reviews-carousel review-carousel-container">
  <div class="review-grid" id="review-carousel-grid">
    {% for block in section.blocks %}
      <div class="review-card">
        {% if block.settings.avatar != blank %}
          <img src="{{ block.settings.avatar | image_url: width: 100 }}" alt="Avatar" class="review-avatar" />
        {% endif %}
        <div class="review-stars">
          {% for i in (1..5) %}
            ⭐
          {% endfor %}
        </div>
        <div class="review-text">{{ block.settings.text }}</div>
        <div class="review-author">– {{ block.settings.author }}</div>
      </div>
    {% endfor %}
  </div>

  {% if section.settings.button_label != blank and section.settings.button_link != blank %}
    <div class="text-center" style="text-align:center;">
      <a class="more-reviews-btn" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
    </div>
  {% endif %}
</div>

<script>
  const grid = document.getElementById("review-carousel-grid");
  let scrollPos = 0;
  const scrollStep = 300;

  setInterval(() => {
    if (grid.scrollWidth - grid.clientWidth > scrollPos) {
      scrollPos += scrollStep;
    } else {
      scrollPos = 0;
    }
    grid.scrollTo({
      left: scrollPos,
      behavior: "smooth"
    });
  }, 5000);
</script>

{% schema %}
{
  "name": "Customer Reviews Carousel",
  "settings": [
    {
      "type": "text",
      "id": "button_label",
      "label": "More Reviews Button Text",
      "default": "Read More Reviews"
    },
    {
      "type": "text",
      "id": "button_link",
      "label": "Button Link URL",
      "default": "/collections/all"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Review Text",
          "default": "This cat bed is amazing! My furry friend has never been happier!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Reviewer Name",
          "default": "Verified Buyer"
        },
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "Reviewer Avatar"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Customer Reviews Carousel",
      "category": "Testimonials",
      "blocks": [
        {
          "type": "review",
          "settings": {
            "text": "My cat sleeps better than I do now!",
            "author": "Lily"
          }
        },
        {
          "type": "review",
          "settings": {
            "text": "Perfect size and super comfy. My cat loves it!",
            "author": "Jason"
          }
        }
      ]
    }
  ]
}
{% endschema %}
