{% comment %}
  Section: All Customer Reviews from Judge.me
  Shows all product reviews using Judge.me's official widget
{% endcomment %}

<style>
  .all-reviews-wrapper {
    max-width: 1000px;
    margin: 0 auto;
    padding: 40px 20px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  }

  .all-reviews-title {
    text-align: center;
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 40px;
  }

  .jdgm-rev-widg {
    max-width: 100%;
  }
</style>

<div class="all-reviews-wrapper">
  <h1 class="all-reviews-title">What Our Customers Are Saying</h1>

  <!-- Judge.me 全部评论 Widget -->
  {% render 'judgeme_widgets', widget_type: 'judgeme_all_reviews_widget', concierge_install: true %}
</div>

{% schema %}
{
  "name": "All Customer Reviews",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "All Reviews Page",
      "category": "Custom"
    }
  ]
}
{% endschema %}
