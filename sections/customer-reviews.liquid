{% stylesheet %}
.static-reviews {
  background-color: #f3f7f9;
  text-align: center;
  padding: 80px 20px;
}

.static-reviews .stars {
  font-size: 20px;
  color: #ccc;
  margin-bottom: 12px;
  letter-spacing: 4px;
}

.static-reviews h2 {
  font-size: 28px;
  font-weight: 600;
  margin-bottom: 10px;
  color: #222;
}

.static-reviews .subheading {
  font-size: 15px;
  color: #666;
  margin-bottom: 40px;
}

.review-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 40px;
  max-width: 1200px;
  margin: 0 auto;
}

.review-item {
  font-size: 16px;
  color: #333;
  line-height: 1.8;
  font-style: normal;
}

.review-item .author {
  display: block;
  font-size: 15px;
  font-style: italic;
  margin-top: 16px;
  color: #000;
}
{% endstylesheet %}

<section class="static-reviews">
  <div class="stars">★ ★ ★ ★ ★</div>
  <h2>{{ section.settings.heading }}</h2>
  {% if section.settings.subheading != blank %}
    <div class="subheading">{{ section.settings.subheading }}</div>
  {% endif %}

  <div class="review-grid">
    {% for block in section.blocks %}
      <div class="review-item">
        “{{ block.settings.text }}”
        {% if block.settings.author != blank %}
          <span class="author">– {{ block.settings.author }}</span>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Static Review Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Making Tails Wag"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Over 10,000 five-star reviews from happy pet parents. Find out why people love our brand."
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Review Text",
          "default": "We love all our Foggy Dog products. Excellent quality, beautiful fabrics and I love that every purchase feeds a shelter dog."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Reviewer Name",
          "default": "Taya A."
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Static Review Grid",
      "category": "Testimonials",
      "blocks": [
        {
          "type": "review"
        },
        {
          "type": "review"
        },
        {
          "type": "review"
        }
      ]
    }
  ]
}
{% endschema %}
