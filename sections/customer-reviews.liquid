{% stylesheet %}
.testimonial-banner {
  background-color: #ffcbe3;
  text-align: center;
  padding: 80px 20px;
  position: relative;
  overflow: hidden;
}

.testimonial-heading {
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 40px;
  color: #000;
}

.testimonial-slider {
  display: flex;
  transition: transform 0.5s ease-in-out;
  width: 100%;
  max-width: 800px;
  margin: 0 auto;
}

.testimonial-slide {
  min-width: 100%;
  padding: 0 20px;
  box-sizing: border-box;
}

.testimonial-text {
  font-size: 18px;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16px;
}

.testimonial-author {
  font-size: 16px;
  font-weight: 500;
  color: #666;
}

.testimonial-dots {
  margin-top: 30px;
}

.testimonial-dots .dot {
  height: 10px;
  width: 10px;
  margin: 0 6px;
  background-color: #999;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.3s;
  cursor: pointer;
}
.testimonial-dots .dot.active {
  background-color: #000;
}
{% endstylesheet %}

<div class="testimonial-banner">
  <div class="testimonial-heading">{{ section.settings.heading_text }}</div>
  <div class="testimonial-slider" id="testimonialSlider">
    {% for block in section.blocks %}
      <div class="testimonial-slide">
        <p class="testimonial-text">“{{ block.settings.text }}”</p>
        {% if block.settings.author != blank %}
          <div class="testimonial-author">– {{ block.settings.author }}</div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  <div class="testimonial-dots" id="testimonialDots">
    {% for block in section.blocks %}
      <span class="dot{% if forloop.first %} active{% endif %}" data-index="{{ forloop.index0 }}"></span>
    {% endfor %}
  </div>
</div>

<script>
  let currentIndex = 0;
  const slides = document.querySelectorAll(".testimonial-slide");
  const dots = document.querySelectorAll(".testimonial-dots .dot");

  function showSlide(index) {
    const slider = document.getElementById("testimonialSlider");
    slider.style.transform = `translateX(-${index * 100}%)`;

    dots.forEach(dot => dot.classList.remove("active"));
    if (dots[index]) dots[index].classList.add("active");
  }

  function nextSlide() {
    currentIndex = (currentIndex + 1) % slides.length;
    showSlide(currentIndex);
  }

  dots.forEach(dot => {
    dot.addEventListener("click", function () {
      currentIndex = parseInt(this.dataset.index);
      showSlide(currentIndex);
    });
  });

  setInterval(nextSlide, 5000);
</script>

