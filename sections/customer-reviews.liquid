  "name": "Testimonial Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "3,000+ 5 Star Reviews"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Review Text",
          "default": "Plenty of air flow with the mesh sides and the bubble is hilarious. Never thought I’d be a crazy cat lady, but here I am killing it!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Reviewer Name",
          "default": "Cat Lady #1"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Testimonial Banner",
      "category": "Testimonials",
      "blocks": [
        {
          "type": "review"
        },
        {
          "type": "review"
        },
        {
          "type": "review"
        }
      ]
    }
  ]
}
{% endschema %}
