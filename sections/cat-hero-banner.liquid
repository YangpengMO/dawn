{% stylesheet %}
.cat-hero-banner {
  margin: 0;
  background-color: #111;
  color: #fff;
  background-image: url('https://cdn.shopify.com/s/files/1/0680/4150/7113/files/banner-bg-texture.jpg');
  background-size: cover;
  background-position: center;
  padding: 80px 0;
}

.cat-hero-banner__wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 2rem;
  flex-wrap: wrap;
  gap: 40px;
}

.cat-hero-banner__image {
  flex: 1 1 50%;
  position: relative;
}

.cat-hero-banner__img {
  width: 100%;
  height: auto;
  border-radius: 0;
  object-fit: cover;
}

.cat-hero-banner__content {
  flex: 1 1 45%;
  max-width: 580px;
  padding: 1rem 0;
  color: #fff;
}

.cat-hero-banner__eyebrow {
  text-transform: uppercase;
  font-size: 0.9rem;
  letter-spacing: 1px;
  margin-bottom: 1rem;
  color: #ccc;
}

.cat-hero-banner__heading {
  font-size: 2.75rem;
  font-weight: 800;
  margin-bottom: 1rem;
  color: #f472b6;
  line-height: 1.2;
}

.cat-hero-banner__text {
  font-size: 1.125rem;
  margin-bottom: 2rem;
  line-height: 1.6;
}

.button.button--primary {
  font-size: 0.95rem;
  padding: 0.9rem 1.75rem;
  background-color: #fff;
  color: #000;
  border-radius: 0;
  text-decoration: none;
  font-weight: bold;
  text-transform: uppercase;
  transition: all 0.3s ease;
  display: inline-block;
}

.button.button--primary:hover {
  background-color: #f472b6;
  color: #fff;
}

@media screen and (max-width: 749px) {
  .cat-hero-banner__wrapper {
    flex-direction: column;
    text-align: center;
  }

  .cat-hero-banner__image,
  .cat-hero-banner__content {
    flex: 1 1 100%;
    max-width: 100%;
  }

  .cat-hero-banner__heading {
    font-size: 2rem;
  }

  .cat-hero-banner__text {
    font-size: 1rem;
  }
}
{% endstylesheet %}

<section class="cat-hero-banner">
  <div class="cat-hero-banner__wrapper">
    <div class="cat-hero-banner__image">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 1500 }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          width="750"
          height="auto"
          class="cat-hero-banner__img"
        >
      {% else %}
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
    <div class="cat-hero-banner__content color-{{ section.settings.color_scheme }}">
      {% if section.settings.eyebrow != blank %}
        <div class="cat-hero-banner__eyebrow">{{ section.settings.eyebrow }}</div>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="cat-hero-banner__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="cat-hero-banner__text">{{ section.settings.text }}</p>
      {% endif %}
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="button button--primary">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Cat Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Top Eyebrow Text",
      "default": "Step Into Comfort"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "HEYDUDE X HELLO KITTY"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Sub Text",
      "default": "Hello Kitty, forever! Introducing our newest footwear collab featuring HEYDUDE."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop the Drop"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    }
  ],
  "presets": [
    {
      "name": "Cat Hero Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}