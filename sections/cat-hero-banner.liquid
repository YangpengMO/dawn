{% stylesheet %}
.cat-hero-banner {
  margin: 0;
  background-color: rgba(17,17,17,0.6);
  color: #fff;
  background-size: cover;
  background-position: center;
  padding: 0;
  min-height: 60vh;
}

.cat-hero-banner__wrapper {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: center;
  width: 100%;
  height: 100%;
  flex-wrap: wrap;
  position: relative;
}

.cat-hero-banner__image {
  flex: 1 1 60%;
  position: relative;
  overflow: hidden;
  height: 60vh;
  order: 2;
}

.cat-hero-banner__image::after {
  content: "";
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: linear-gradient(to bottom, rgba(17,17,17,0.6), rgba(17,17,17,0));
  z-index: 1;
  pointer-events: none;
}

.cat-hero-banner__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.cat-hero-banner__content {
  flex: 1 1 40%;
  padding: 4rem 3rem;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #fff;
  text-align: left;
  min-height: 60vh;
  order: 1;
  z-index: 2;
  max-width: 540px;
  margin-left: auto;
  margin-right: auto;
  background: transparent;
  font-family: 'Helvetica Neue', sans-serif;
  letter-spacing: -0.02em;
  animation: fadeInUp 0.6s ease-out;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.cat-hero-banner__eyebrow {
  text-transform: uppercase;
  font-size: 0.85rem;
  letter-spacing: 1px;
  margin-bottom: 1.25rem;
  color: #ccc;
  font-weight: 600;
  opacity: 0.75;
}

.cat-hero-banner__heading {
  font-size: 2.75rem;
  font-weight: 800;
  margin-bottom: 1.25rem;
  color: #f472b6;
  line-height: 1.3;
  letter-spacing: -0.02em;
}

.cat-hero-banner__text {
  font-size: 1.125rem;
  margin-bottom: 2.5rem;
  line-height: 1.75;
  color: #f4f4f4;
}

.button.button--primary {
  font-size: 1rem;
  padding: 0.9rem 1.5rem;
  background-color: #f472b6;
  color: #fff;
  border-radius: 0;
  text-decoration: none;
  font-weight: 700;
  text-transform: uppercase;
  transition: background 0.3s ease, color 0.3s ease, border 0.3s ease;
  display: inline-block;
  border: 1px solid #f472b6;
  width: fit-content;
  margin-left: 0;
}

.button.button--primary:hover {
  background-color: transparent;
  border-color: #f472b6;
  color: #f472b6;
}

@media screen and (max-width: 749px) {
  .cat-hero-banner__wrapper {
    flex-direction: column;
  }

  .cat-hero-banner__image,
  .cat-hero-banner__content {
    flex: 1 1 100%;
    max-width: 100%;
    height: auto;
    min-height: auto;
  }

  .cat-hero-banner__content {
    position: absolute;
    top: 1.25rem;
    left: 0;
    right: 0;
    margin: 0;
    background: transparent;
    padding: 2rem 1.5rem;
    text-align: center;
    z-index: 2;
    order: 2;
    text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  }

  .cat-hero-banner__image {
    order: 1;
  }

  .cat-hero-banner__heading {
    font-size: 2rem;
  }

  .cat-hero-banner__text {
    font-size: 1rem;
  }

  .button.button--primary {
    font-size: 0.95rem;
    padding: 0.85rem 1.5rem;
    margin-left: auto;
    margin-right: auto;
  }
}
{% endstylesheet %}

<section class="cat-hero-banner">
  <div class="cat-hero-banner__wrapper">
    <div class="cat-hero-banner__image">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 1500 }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          class="cat-hero-banner__img"
        >
      {% else %}
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
    <div class="cat-hero-banner__content">
      {% if section.settings.eyebrow != blank %}
        <div class="cat-hero-banner__eyebrow">{{ section.settings.eyebrow }}</div>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="cat-hero-banner__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="cat-hero-banner__text">{{ section.settings.text }}</p>
      {% endif %}
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="button button--primary">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Cat Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Top Eyebrow Text",
      "default": "Step Into Comfort"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Home is where the purr is."
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Sub Text",
      "default": "Cozy spaces, smart feeders, and playful moments — all designed for your cat’s joy."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop the Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Cat Hero Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}
