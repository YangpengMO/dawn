{% stylesheet %}
.cat-hero-banner {
  margin: 0;
  background-color: #333;
  color: #fff;
  background-size: cover;
  background-position: center;
  padding: 0;
  min-height: 60vh;
}

.cat-hero-banner__wrapper {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: center;
  width: 100%;
  height: 100%;
  flex-wrap: wrap;
  position: relative;
}

.cat-hero-banner__image {
  flex: 1 1 60%;
  position: relative;
  overflow: hidden;
  height: 60vh;
  order: 2;
}

.cat-hero-banner__img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.cat-hero-banner__content {
  flex: 1 1 40%;
  background: #fff;
  padding: 4rem 3rem;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #000;
  text-align: left;
  min-height: 60vh;
  order: 1;
  z-index: 2;
}

.cat-hero-banner__eyebrow {
  text-transform: uppercase;
  font-size: 0.85rem;
  letter-spacing: 1px;
  margin-bottom: 1.25rem;
  color: #999;
}

.cat-hero-banner__heading {
  font-size: 2.75rem;
  font-weight: 800;
  margin-bottom: 1.25rem;
  color: #f472b6;
  line-height: 1.3;
}

.cat-hero-banner__text {
  font-size: 1.125rem;
  margin-bottom: 2.5rem;
  line-height: 1.75;
  color: #333;
}

.button.button--primary {
  font-size: 1rem;
  padding: 1rem 2rem;
  background-color: #000;
  color: #fff;
  border-radius: 0;
  text-decoration: none;
  font-weight: 700;
  text-transform: uppercase;
  transition: background 0.3s ease;
  display: inline-block;
  border: 1px solid #000;
}

.button.button--primary:hover {
  background-color: #f472b6;
  border-color: #f472b6;
  color: #fff;
}

@media screen and (max-width: 749px) {
  .cat-hero-banner__wrapper {
    flex-direction: column;
  }

  .cat-hero-banner__image,
  .cat-hero-banner__content {
    flex: 1 1 100%;
    max-width: 100%;
    height: auto;
    min-height: auto;
  }

  .cat-hero-banner__content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    margin: auto;
    background: transparent;
    padding: 2rem 1.5rem;
    text-align: center;
    z-index: 2;
    order: 2;
  }

  .cat-hero-banner__image {
    order: 1;
  }

  .cat-hero-banner__heading {
    font-size: 2rem;
  }

  .cat-hero-banner__text {
    font-size: 1rem;
  }

  .button.button--primary {
    font-size: 0.95rem;
    padding: 0.85rem 1.5rem;
  }
}
{% endstylesheet %}

<section class="cat-hero-banner">
  <div class="cat-hero-banner__wrapper">
    <div class="cat-hero-banner__image">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 1500 }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          class="cat-hero-banner__img"
        >
      {% else %}
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      {% endif %}
    </div>
    <div class="cat-hero-banner__content color-{{ section.settings.color_scheme }}">
      {% if section.settings.eyebrow != blank %}
        <div class="cat-hero-banner__eyebrow">{{ section.settings.eyebrow }}</div>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="cat-hero-banner__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <p class="cat-hero-banner__text">{{ section.settings.text }}</p>
      {% endif %}
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="button button--primary">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Cat Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Top Eyebrow Text",
      "default": "Step Into Comfort"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Home is where the purr is."
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Sub Text",
      "default": "Cozy spaces, smart feeders, and playful moments — all designed for your cat’s joy."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop the Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    }
  ],
  "presets": [
    {
      "name": "Cat Hero Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}
